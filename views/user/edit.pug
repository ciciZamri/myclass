extend ../layout

block content
    include ../components/navbar
    <div class="flex justify-center items-center" >
        <form class="w-80 border rounded-md shadow-md py-4 px-6 mt-8 mx-3 bg-white" action="/user/profile/edit" method="post">
            <h1 class="font-bold text-3xl mb-2" >Edit profile</h1>
            <div class="mb-2" >
                <label class="block" for="name">Name</label>
                <input class="rounded border border-gray-900 p-1 w-full" type="text" name="name" value="#{user.name}" required>
            </div>
            <div class="mb-2" >
                <label class="block" for="gender">Gender</label>
                <select class="rounded border border-gray-900 p-1 w-full" name="gender">
                    - var isMale = user.gender == "male"
                    <option value="male" #{isMale ? 'selected' : ''}>Male</option>
                    <option value="female" #{isMale ? '' : 'selected'}>Female</option>
                </select>
                <!-- <input class="rounded border border-gray-900 p-1 w-full" type="text" name="gender" required> -->
            </div>
            <div class="mb-2" >
                <label class="block" for="age">Age</label>
                <input class="rounded border border-gray-900 p-1 w-full" type="number" name="age" value="#{user.age}" required>
            </div>
            <div class="mb-2" >
                <label class="block" for="email">Email</label>
                <input class="rounded border border-gray-900 p-1 w-full" type="email" name="email" value="#{user.email}" required>
            </div>
            <div class="flex justify-end items-center" >
                <a class="text-blue-500 mr-5" href="javascript:history.back()">Cancel</a>
                <input class="px-4 py-2 bg-gray-900 rounded text-white cursor-pointer" type="submit" value="Update">
            </div>
        </form>
    </div>