extends ../layout

block content
    <div class="flex justify-center items-center h-screen bg-gray-200" >
        <form class="w-80 rounded-md shadow-md py-4 px-6 bg-white" action="/user/login" method="post">
            <h1 class="font-bold text-3xl mb-2" >Login</h1>
            <div class="mb-2" >
                <label class="block" for="email">Email</label>
                <input class="rounded border border-gray-900 p-1 w-full" type="email" name="email" required>
                if emailError 
                    <p class="text-red-600 text-sm" >#{emailError}</p>
            </div>
            <div class="mb-4">
                <label class="block" for="password">Password</label>
                <input class="rounded border border-gray-900 p-1 w-full" type="password" name="password" required>
                if passwordError 
                    <p class="text-red-600 text-md" >#{passwordError}</p>
            </div>
            <div class="flex justify-end" >
                <input class="px-4 py-2 bg-gray-900 rounded text-white cursor-pointer" type="submit" value="Login">
            </div>
            <div class="flex justify-center mt-4" >
                <a class="text-blue-500" href="/user/register">Register</a>
            </div>
        </form>
    </div>