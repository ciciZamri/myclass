extends ../layout

block content
    <div class="flex justify-center  items-center h-screen bg-gray-200" >
        <form class="w-80 rounded-md shadow-md py-4 px-6 bg-white" action="/user/register" method="post">
            <h1 class="font-bold text-3xl mb-2" >Register</h1>
            <div class="mb-2" >
                <label class="block" for="name">Name</label>
                <input class="rounded border border-gray-900 p-1 w-full" type="text" name="name" required>
            </div>
            <div class="mb-2" >
                <label class="block" for="gender">Gender</label>
                <select class="rounded border border-gray-900 p-1 w-full" name="gender">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
            </div>
            <div class="mb-2" >
                <label class="block" for="age">Age</label>
                <input class="rounded border border-gray-900 p-1 w-full" type="number" name="age" required>
            </div>
            <div class="mb-2" >
                <label class="block" for="email">Email</label>
                <input class="rounded border border-gray-900 p-1 w-full" type="email" name="email" required>
            </div>
            <div class="mb-3">
                <label class="block" for="password">Password</label>
                <input class="rounded border border-gray-900 p-1 w-full" type="password" name="password" required>
            </div>
            <div class="flex justify-end" >
                <input class="px-4 py-2 bg-gray-900 rounded text-white cursor-pointer" type="submit" value="Register">
            </div>
            <div class="flex justify-center mt-4" >
                <a class="text-blue-500" href="/user/login">Login</a>
            </div>
        </form>
    </div>