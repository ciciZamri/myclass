extend ../layout

block content
    include ../components/navbar
    <div class="flex justify-center items-center" >
        <form class="w-80 rounded-md shadow-md py-4 px-6 bg-white mt-8" action="/course/create" method="post">
            <h1 class="font-bold text-3xl mb-2" >Create a course</h1>
            <div class="mb-2" >
                <label class="block" for="name">Name</label>
                <input class="rounded border border-gray-900 p-1 w-full" type="text" name="name" required>
            </div>
            <div class="mb-2" >
                <label class="block" for="email">Description</label>
                <textarea class="rounded border border-gray-900 p-1 w-full" name="description" cols="30" rows="3" required></textarea>
            </div>
            <div class="flex justify-end items-center" >
                <a class="text-blue-500 mr-5" href="/course/home">Cancel</a>
                <input class="px-4 py-2 bg-gray-900 rounded text-white cursor-pointer" type="submit" value="Create">
            </div>
        </form>
    </div>