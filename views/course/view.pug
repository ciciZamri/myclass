extend ../layout

block content
    include ../components/navbar
    <header class="rounded bg-white shadow p-4 mx-4 my-2" >
        <h1 class="text-2xl font-bold" >#{course.name}</h1>
        <p>Class code: #{course._id}</p>
        <p>#{course.description}</p>
    </header>
    <section class="mx-4" >
        <div class="flex justify-between" >
            <h1 class="font-semibold text-xl" >Posts</h1>
            if isTeacher
                <a class="flex justify-center items-center py-1 text-blue-600 w-24"  href="/course/post/create">
                    <span class="material-icons text-md" >add</span>
                    <p>Create</p>
                </a>
        </div>
    </section>